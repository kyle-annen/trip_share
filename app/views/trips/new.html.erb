<div class="col-md-offset-4 col-md-4">
  
  <h1 class="text-center">Start a New Trip</h1>
  <div class="row">
    <div class ="container-fluid">
      <%= form_for(@trip) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="mui-textfield">
        <%= f.label :Trip %>
        <%= f.text_field :name%>
      </div>
      <div class="mui-textfield">
      <%= f.label :Blurb %>
      <%= f.text_field :blurb, class: 'form-control' %>
      </div>
      <%= f.label :Image %>
      <%= f.file_field :image%><br>

      <%= f.submit "Create Trip", class: "mui-btn mui-btn--raised" %>
      <% end %>
    </div>
  </div>
</div>